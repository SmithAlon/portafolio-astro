<button
    id="boton-up"
    class="fixed bottom-4 right-4 bg-black/60 hover:bg-black/80 text-white w-12 h-12 rounded-full flex items-center justify-center shadow-lg cursor-pointer transition-colors opacity-0 invisible"
    aria-label="Volver arriba"
>
    <svg 
        class="w-6 h-6" 
        fill="none" 
        stroke="currentColor" 
        viewBox="0 0 24 24"
    >
        <path 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M5 10l7-7m0 0l7 7m-7-7v18"
        />
    </svg>
</button>

<script>
    import { gsap } from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';
    import { ScrollToPlugin } from 'gsap/ScrollToPlugin';

    gsap.registerPlugin(ScrollTrigger, ScrollToPlugin);

    const boton = document.getElementById('boton-up');

    // Show/hide button based on scroll position
    ScrollTrigger.create({
        start: '100 top',
        onEnter: () => gsap.to(boton, { autoAlpha: 1, duration: 0.3 }),
        onLeaveBack: () => gsap.to(boton, { autoAlpha: 0, duration: 0.3 })
    });

    // Scroll to top on click
    boton?.addEventListener('click', () => {
        gsap.to(window, {
            duration: 1,
            scrollTo: { y: 0 },
            ease: 'power2.inOut'
        });
    });
</script>
